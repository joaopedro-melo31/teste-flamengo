<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <media>
        <images module="Magento_Catalog">
            <image id="pagebuilder_product_image_admin" type="image">
                <width>288</width>
                <height>288</height>
            </image>
            <image id="pagebuilder_page_grid" type="small_image">
                <width>288</width>
                <height>288</height>
            </image>
            <image id="pagebuilder_page_list" type="small_image">
                <width>288</width>
                <height>288</height>
            </image>
            <image id="pagebuilder_carousel" type="small_image">
                <width>288</width>
                <height>288</height>
            </image>
            <image id="pagebuilder_page_grid" type="base_image">
                <width>288</width>
                <height>288</height>
            </image>
            <image id="pagebuilder_page_list" type="base_image">
                <width>288</width>
                <height>288</height>
            </image>
            <image id="pagebuilder_carousel" type="base_image">
                <width>288</width>
                <height>288</height>
            </image>
            <image id="new_products_content_widget_grid" type="small_image">
                <width>288</width>
                <height>288</height>
            </image>
            <image id="category_page_grid" type="small_image">
                <width>288</width>
                <height>288</height>
            </image>
            <image id="product_page_image_small" type="thumbnail">
                <width>110</width>
                <height>110</height>
            </image>
            <image id="related_products_list" type="small_image">
              <width>288</width>
              <height>288</height>
            </image> 
        </images>
    </media>
    <vars module="Magento_PageBuilder">
        <var name="breakpoints">
            <var name="desktop">
                <var name="options">
                    <var name="products">
                        <var name="default">
                            <var name="slidesToShow">4</var>
                        </var>
                    </var>
                </var>
            </var>
        </var>
    </vars>
    <vars module="Magento_Catalog">
        <var name="gallery">
            <var name="navdir">horizontal</var> <!-- Sliding direction of thumbnails (horizontal/vertical) -->
        </var>
    </vars>
</view>
