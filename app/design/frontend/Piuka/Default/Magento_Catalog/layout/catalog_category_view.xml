<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

    	<referenceContainer name="page.top">
            <block class="Magento\Cms\Block\Block" name="bottom-message" after="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">bottom-message</argument>
                </arguments>
            </block>
        </referenceContainer>
        
        <move element="category.image" destination="page.wrapper" before="main.content" />
        <move element="category.cms" destination="page.wrapper" before="main.content" />
        <move element="category.description" destination="page.wrapper" before="footer-container" />


        <referenceBlock name="form.subscribe" remove="true"/>
    </body>
</page>
